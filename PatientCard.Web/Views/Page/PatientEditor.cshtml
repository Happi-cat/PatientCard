@{
	Layout = "Patient.cshtml";
}
<div class="page-header">
	<h3>Карта пациента</h3>
</div>
<form class="form-horizontal" role="form">
	<div class="form-group">
		<label class="col-sm-3 control-label">Ф.И.О. Пациента</label>
		<div class="col-sm-3">
			<input type="text" class="form-control" placeholder="Фамилия">
		</div>
		<div class="col-sm-3">
			<input type="text" class="form-control" placeholder="Имя">
		</div>
		<div class="col-sm-3">
			<input type="text" class="form-control" placeholder="Отчество">
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-3 control-label">Дата рождения</label>
		<div class="col-sm-3">
			<p class="input-group">
				<input type="text" class="form-control" datepicker-popup="{{format}}" ng-model="dt" is-open="opened"
				       min-date="minDate" max-date="'2015-06-22'" datepicker-options="dateOptions"
				       date-disabled="disabled(date, mode)" ng-required="true" close-text="Close" />
				<span class="input-group-btn">
					<button type="button" class="btn btn-default" ng-click="open($event)"><i class="glyphicon glyphicon-calendar"></i></button>
				</span>
			</p>
		</div>
		<label class="col-sm-offset-1 col-sm-2 control-label">Пол</label>
		<div class="col-sm-3">
			<select class="form-control" ng-model="hstep" ng-options="opt for opt in options.hstep"></select>
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-3 control-label">Адрес постоянной (временной) регистрации</label>
		<div class="col-sm-9">
			<textarea class="form-control" rows="2" placeholder="Адрес"></textarea>
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-3 control-label">Контактные телефоны</label>
		<div class="col-sm-9">
			<input type="text" class="form-control" placeholder="Телефоны">
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-3 control-label">Социальное положение</label>
		<div class="col-sm-9">
			<input type="text" class="form-control" placeholder="Соц. положение">
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-3 control-label">Место работы (службы, учебы)</label>
		<div class="col-sm-9">
			<textarea class="form-control" rows="2" placeholder="Место работы и т.д."></textarea>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-3 col-sm-9">
			<button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-floppy-disk"></span>&nbsp;Сохранить</button>
			<button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-remove"></span>&nbsp;Отмена</button>
		</div>
	</div>
</form>

@section Breadcrumb
{
	<ol class="breadcrumb">
		<li><a href="#!/patients">Пациенты</a></li>
		<li class="active">Новый пациент</li>
	</ol>
}
