@model IList<PatientCard.Core.Models.ThreatmentOption>
@{
	Layout = "Patient.cshtml";
}
<div class="page-header">
	<h3>План лечения</h3>
</div>
@if (true == ViewBag.View)
{
	
	<dl>
		@foreach (var option in Model)
		{
			var padding = option.OrderNumber == 0 ? Convert.ToString(option.GroupNumber) : "";
			<dt>
				<label class="col-sm-1 control-label">@padding</label>
				<div class="col-sm-11">
					<label class="control-label">@option.Name</label>
				</div>
			</dt>
			<dd>
				<div class="col-sm-offset-1 col-sm-11">
				
				</div>
			</dd>
		}
	</dl>
}
else
{
	<form class="form-horizontal" role="form">
		@foreach (var option in Model)
		{
			var padding = option.OrderNumber == 0 ? Convert.ToString(option.GroupNumber) : "";


			<div class="form-group">
				<label class="col-sm-1 control-label">@padding</label>
				<div class="col-sm-11">
					<label class="control-label">@option.Name</label>
					<input type="text" class="form-control">
				</div>
			</div>
		}
		<div class="form-group">
			<div class="col-sm-offset-1 col-sm-11">
				<button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-floppy-disk"></span>&nbsp;Сохранить</button>
				<button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-remove"></span>&nbsp;Отмена</button>
			</div>
		</div>
	</form>
}
@section Breadcrumb
{
	<ol class="breadcrumb">
		<li><a href="#!/patients">Пациенты</a></li>
		<li><a href="#!/patient/view/id">ИМЯ</a></li>
		<li class="active">План лечения</li>
	</ol>
}