<ul class="media-list" ng-controller="PatientOhisStatusCtrl as ohistStatus">
	<li class="media" ng-if="checkPerm(ohistStatus.editPerm)">
		<div ng-if="!ohistStatus.editFormEnabled">
			<button class="btn btn-primary" ng-click="ohistStatus.add()"><span class="glyphicon glyphicon-plus"></span>&nbsp;Добавить</button>
		</div>
		<ng-include src="'/Dentist/OhisStatusEditor'" ng-if="ohistStatus.editFormEnabled"></ng-include>
	</li>
	<li class="media" ng-repeat="item in ohistStatus.ohisStatuses | orderBy:'-created' | limitTo:3">
		<div class="panel panel-default">
			<div class="panel-heading">
				{{ item.created | date }}<span class="badge pull-right">{{ item.ohis }}</span>
			</div>
			<table class="table table-ohis table-condensed table-bordered small">
				<tr>
					<td>{{ item.dis1 }}&nbsp;<b>&#x2215</b>&nbsp;{{ item.cis1 }}</td>
					<td>{{ item.dis2 }}&nbsp;<b>&#x2215</b>&nbsp;{{ item.cis2 }}</td>
					<td>{{ item.dis3 }}&nbsp;<b>&#x2215</b>&nbsp;{{ item.cis3 }}</td>
				</tr>
				<tr>
					<td>{{ item.dis4 }}&nbsp;<b>&#x2215</b>&nbsp;{{ item.cis4 }}</td>
					<td>{{ item.dis5 }}&nbsp;<b>&#x2215</b>&nbsp;{{ item.cis5 }}</td>
					<td>{{ item.dis6 }}&nbsp;<b>&#x2215</b>&nbsp;{{ item.cis6 }}</td>
				</tr>
			</table>
		</div>
	</li>
</ul>
