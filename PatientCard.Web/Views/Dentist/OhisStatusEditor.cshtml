					<input type="text" maxlength="1" class="form-control" ng-class="{ 'has-error': statusForm.cis1.$invalid }" name="cis1" ng-model="ohistStatus.status.cis1" ng-pattern="/^[0-3]{1}$/"/>
				</div>
				<div class="input-group">
					<input type="text" maxlength="1" class="form-control" ng-class="{ 'has-error': statusForm.dis2.$invalid }" name="dis2" ng-model="ohistStatus.status.dis2" ng-pattern="/^[0-3]{1}$/"/>
					<span class="input-group-addon">&#x2215</span>
					<input type="text" maxlength="1" class="form-control" ng-class="{ 'has-error': statusForm.cis2.$invalid }" name="cis2" ng-model="ohistStatus.status.cis2" ng-pattern="/^[0-3]{1}$/"/>
				</div>
				<div class="input-group">
