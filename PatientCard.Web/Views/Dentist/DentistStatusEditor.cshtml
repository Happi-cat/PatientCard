<div class="btn-group" ng-if="!editFormEnabled">
	<button class="btn btn-default" ng-click="add()"><span class="glyphicon glyphicon-plus"></span>&nbsp;Добавить</button>
</div>
<form name="statusForm" class="form-horizontal" role="form" ng-if="editFormEnabled">
	<div class="form-group">
		<div class="col-sm-12">
			<label class="control-label">Прикус</label>
			<textarea rows="2" class="form-control" name="bite" ng-model="status.bite"></textarea>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-12">
			<label class="control-label">Состояние твердых тканей зубов, периодонта</label>
			<textarea rows="2" class="form-control" name="hardTissue" ng-model="status.hardTissue"></textarea>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-12">
			<label class="control-label">Состояние слизистой оболочки рта</label>
			<textarea rows="2" class="form-control" name="mucous" ng-model="status.mucous"></textarea>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-12">
			<label class="control-label">Данные рентгеновского и других исследований</label>
			<textarea rows="2" class="form-control" name="xrayDiagnostics" ng-model="status.xrayDiagnostics"></textarea>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-12">
			<label class="control-label">Предварительный диагноз</label>
			<textarea rows="2" class="form-control" name="preliminaryDiagnosis" ng-model="status.preliminaryDiagnosis"></textarea>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-12">
			<button class="btn btn-primary" ng-click="ok()" ng-disabled="statusForm.$invalid"><span class="glyphicon glyphicon-plus"></span>&nbsp;Добавить</button>
			<button type="reset" class="btn btn-default" ng-click="statusForm.$setPristine(); cancel()"><span class="glyphicon glyphicon-remove"></span>&nbsp;Отмена</button>
		</div>
	</div>
</form>
