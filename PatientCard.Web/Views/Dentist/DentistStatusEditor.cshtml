<div class="panel panel-primary">
	<div class="panel-heading">Описание</div>
	<div class="panel-body">
		<form name="statusForm" class="form-horizontal" role="form" ng-if="dentistStatus.editFormEnabled">
			<div class="form-group">
				<div class="col-sm-12">
					<label class="control-label">Прикус</label>
					<textarea rows="2" class="form-control" name="bite" ng-model="dentistStatus.status.bite"></textarea>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-12">
					<label class="control-label">Состояние твердых тканей зубов, периодонта</label>
					<textarea rows="2" class="form-control" name="hardTissue" ng-model="dentistStatus.status.hardTissue"></textarea>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-12">
					<label class="control-label">Состояние слизистой оболочки рта</label>
					<textarea rows="2" class="form-control" name="mucous" ng-model="dentistStatus.status.mucous"></textarea>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-12">
					<label class="control-label">Данные рентгеновского и других исследований</label>
					<textarea rows="2" class="form-control" name="xrayDiagnostics" ng-model="dentistStatus.status.xrayDiagnostics"></textarea>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-12">
					<label class="control-label">Предварительный диагноз</label>
					<textarea rows="2" class="form-control" name="preliminaryDiagnosis" ng-model="dentistStatus.status.preliminaryDiagnosis"></textarea>
				</div>
			</div>
		</form>
	</div>
	<div class="panel-footer">
		<button class="btn btn-success" ng-click="dentistStatus.ok()" ng-disabled="statusForm.$invalid"><span class="glyphicon glyphicon-ok"></span>&nbsp;Сохранить</button>
		<button type="reset" class="btn btn-default" ng-click="statusForm.$setPristine(); dentistStatus.cancel()"><span class="glyphicon glyphicon-remove"></span>&nbsp;Отмена</button>
	</div>
</div>
